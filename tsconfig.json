{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/types/*": ["types/*"],
      "@/context/*": ["src/context/*"],
      "@/lib/*": ["lib/*"],
      "@/public/*": ["public/*"],
      "@/utils/*": ["utils/*"],
      "@/hooks/*": ["hooks/*"],
      "@/data/*": ["data/*"]
    },
    "target": "ES6",
    "module": "ESNext",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "components/**/*",
    "hooks/**/*",
    "lib/**/*",
    "pages/**/*",
    "src/**/*",
    "tests/**/*",
    "types/**/*",
    "utils/**/*",
    ".next/types/**/*.ts",
    "types/next-auth.d.ts",
    "next-env.d.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
