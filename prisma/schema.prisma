// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Show {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  img     String
  trailer String
  desc    String
  score   Float
  seasons Int
  year    Int
  reviews Review[]
}

model User {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  age             Int
  following       Int
  followers       Int
  reviews         Review[]
  favoriteReviews String[]
  favoriteShows   String[]
  watchList       String[]
  profilePicture  String
  bio             String
  isAdmin         Boolean
  password        String
}

model Review {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  User     User   @relation(fields: [userID], references: [id])
  userID   String @db.ObjectId
  Show     Show   @relation(fields: [showID], references: [id])
  showID   String @db.ObjectId
  title    String
  score    Float
  text     String
  reacts   Int
  comments Int
  time     Int
}
