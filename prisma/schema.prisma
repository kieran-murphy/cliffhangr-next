generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Show {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  img     String
  desc    String
  score   Float
  seasons Int
  year    Int
}

