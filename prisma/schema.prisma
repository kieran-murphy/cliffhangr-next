// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Show {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  img     String
  trailer String
  desc    String
  score   Float
  seasons Int
  year    Int
}

model User {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  age             Int
  following       Int
  followers       Int
  reviews         Int
  favoriteReviews Int
  favoriteShows   Int
  watchList       Int
  profilePicture  String
  bio             String
  isAdmin         Boolean
  password        String
}

model Review {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  userID   String
  username String
  showID   String
  title    String
  score    Float
  text     String
  reacts   Int
  comments Int
  time     Int
}
